<hibernate-configuration>
 <session-factory name="">  
  <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="connection.url">jdbc:mysql://localhost:3306/Todos</property>
  <property name="connection.username">demo</property>
  <property name="connection.password">password</property>
  <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
  <!-- JDBC connection pool (use the built-in) -->
  <property name="connection.pool_size">1</property>
  <!-- Disable the second-level cache, for transparency  -->
  <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
  <!-- Echo all executed SQL to stdout -->
  <property name="show_sql">true</property>
  <!-- Fetch lazy-loaded properties in batches -->
  <property name="default_batch_fetch_size">32</property>
  <mapping resource="todo/mapping/TodoItem.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
